<?xml version="1.0"?>
<launch>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mmp30_viz)/rviz/robot.rviz" output="screen"/>

  <arg name="model" default="$(find mmp30_description)/urdf/description.xacro"/>
  <arg name="gui" default="true" />
  <arg name="rvizconfig" default="$(find mmp30_description)/urdf/description.xacro"/>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />
  <param name="use_gui" value="$(arg gui)"/>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />

</launch>
